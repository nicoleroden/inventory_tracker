<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @room.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

            <% @room.items.each do |item| %>
            <li> <a href="/items/<%= item.id %>"><%= item.name %><font color="red"><strong><%= if item.expiration < Date.today then "   TO BUY!" else "" end %></strong></font></a></li>
          <% end %>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/rooms" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/rooms/<%= @room.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_room/<%= @room.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
